<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ashish.exotelchallenge.UserDetailSignUpActivity"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llInfo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up Info"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <TextView
                android:text="F. Name : "
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Ashish"
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etFirstName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <TextView
                android:text="L. Name : "
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Rajani"
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etLastName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <TextView
                android:text="Email : "
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="aashhissh@gmail.com"
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etEmail" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <TextView
                android:text="Mobile : "
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="+919408757069"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etPhoneNumber" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btSaveInfo"
        android:layout_below="@+id/llInfo"
        android:text="Save Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
